			not-null="true">
			<column name="V_DSCRMNDOR" length="100">
				<comment>DISCRIMINADOR DEL VALOR.</comment>
			</column>
		</discriminator>

		<property name="descripcion" type="string">
			<column name="V_DSCRPCON" length="100">
				<comment>DESCRIPCION DE ESTADO.</comment>
			</column>
		</property>

