<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="pe.gob.trabajo.pcd.modelo.dominio.EscalaRemuneracion"
		table="SITB_ESCALAREMUN">
		<id name="id" type="string">
			<column name="V_CODESCALA" length="3" />
		</id>
		<property name="abreviatura" type="string">
			<column name="V_ABRVESCALA" length="15" />
		</property>
		<property name="nombre" type="string">
			<column name="V_NOMESCALA" length="80" />
		</property>
		<property name="descripcion" type="string">
			<column name="V_DESESCALA" length="500" />
		</property>
		<property name="estado" type="string">
			<column name="V_FLGACT" length="1" />
		</property>
	</class>
</hibernate-mapping>
